{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aiidalab.github.io/aiidalab-registry/schemas/v1/app.schema.json",
    "$ref": "#/definitions/App",
    "definitions": {
        "App": {
            "type": "object",
            "properties": {
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "logo": {
                    "type": "string",
                    "format": "uri",
                    "qt-uri-protocols": [
                        "https"
                    ]
                },
                "metadata": {
                    "$ref": "https://aiidalab.github.io/aiidalab-registry/schemas/v1/metadata.schema.json#/definitions/Welcome"
                },
                "name": {
                    "type": "string"
                },
                "releases": {
                    "type": "object",
                    "patternProperties": {
                        ".*": {
                            "$ref": "#/definitions/Release"
                        }
                    },
                    "propertyNames": {
                        "pattern": ".*"
                    }
                }
            },
            "additionalProperties": false,
            "required": [
                "metadata",
                "releases"
            ],
            "title": "App"
        },
        "Release": {
            "properties": {
                "metadata": {
                    "$ref": "https://aiidalab.github.io/aiidalab-registry/schemas/v1/metadata.schema.json#/definitions/Welcome"
                },
                "environment": {
                    "$ref": "https://aiidalab.github.io/aiidalab-registry/schemas/v1/environment.schema.json#/definitions/Environment"
                },
                "url": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    }
}
